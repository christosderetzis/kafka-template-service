{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "email": {
      "type": ["string", "null"]
    },
    "age": {
      "type": ["integer", "null"]
    }
  },
  "required": ["id", "name"]
}